<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/your_database</property>
        <property name="hibernate.connection.username">your_user</property>
        <property name="hibernate.connection.password">your_password</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <mapping class="org.example.usermanagerservice.entity.User"/>
        <mapping class="org.example.usermanagerservice.entity.Location"/>
        <mapping class="org.example.usermanagerservice.entity.Login"/>
        <mapping class="org.example.usermanagerservice.entity.Name"/>
        <mapping class="org.example.usermanagerservice.entity.Picture"/>
    </session-factory>
</hibernate-configuration>
